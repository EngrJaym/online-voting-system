<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Election Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <nav class="navbar navbar-expand-sm bg-primary border">
        <a class="navbar-brand ms-5 text-white" href="#">DigiVote by URSM</a>
        <div class="d-flex inline align-items-center ms-auto">
            <p class="text-white h5 mx-5">Election Title: <%= election.electionTitle %>
            </p>
            <a class="btn btn-warning ms-auto me-5" href="/admin/dashboard">Back to Dashboard</a>
        </div>
    </nav>
    <div class="container p-5">
        <div class="container text-center">
            <p class="h1">
                <%= election.electionTitle %>
                    <%= status==='ONGOING' ? 'Partial Election Results' : 'Final Election Results' %>
            </p>
        </div>
        <div class="container">
            <p class="h3">Overall Voter Turnout: <%= parseFloat(voterTurnout) %> out of <%= parseFloat(votersCount) %>
                        invited voters voted</p>
            <div class="progress" style="height: 40px;">
                <div class="progress-bar" role="progressbar" style="width: <%= voterTurnoutPercentage %>%;"
                    aria-valuenow="<%= voterTurnoutPercentage %>" aria-valuemin="0" aria-valuemax="100">
                    <%= voterTurnoutPercentage %>%
                </div>
            </div>
        </div>

        <% for (const ballot of ballots){ %>
            <div class="card mx-auto my-5">
                <div class="card-header">
                    <p class="card-title">
                        <%= ballot.position %>
                    </p>
                </div>
                <div class="card-body d-flex inline px-auto" style="position: relative; height:40vh; width:40vw">
                    <canvas class="ms-3" id="<%= ballot.position %>barChart"></canvas>
                    <canvas id="<%= ballot.position %>doughnutChart"></canvas>

                </div>
            </div>

            <script>
                var xValues = [];
                var yValues = [];
            <% ballot.candidates.forEach(candidate => { %>
                    xValues.push('<%= candidate %>');
                    <%
                    var found = false;
                    for (let result of results) {
                        if (result.position === ballot.position && result.candidate === candidate) {
                            found = true; %>
                                console.log(`Candidate: <%= candidate %>, Count: <%= result.count %>`);

                            yValues.push(<%= result.count %>);
                            
                        <% }
                    }
                    if (!found) { %>
                        yValues.push(0);
                    <% }

                }); %>
                    console.log('xvalues', xValues);
                console.log('yvalues', yValues)

                var barChart = document.getElementById('<%= ballot.position %>barChart');

                new Chart(barChart, {
                    type: 'bar',
                    data: {
                        labels: xValues,
                        datasets: [{
                            label: '# of votes',
                            data: yValues,
                            borderWidth: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                stacked: true,
                                grid: {
                                    display: true
                                },
                                title: {
                                    display: true,
                                    text: 'Number of Votes'
                                },
                                beginAtZero: true,
                                suggestedMin: 0,
                                suggestedMax: 1,
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                },
                                title: {
                                    display: true,
                                    text: 'Name of Candidates'
                                }
                            }
                        }
                    }
                });

                var doughnutChart = document.getElementById('<%= ballot.position %>doughnutChart');

                new Chart(doughnutChart, {
                    type: 'doughnut',
                    data: {
                        labels: xValues,
                        datasets: [{
                            label: '# of votes',
                            data: yValues,
                            borderWidth: 3
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        layout: {
                            padding: {
                                left: 30,
                                right: 5
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: function (context) {
                                        var label = context.label || '';
                                        var value = context.parsed || 0;
                                        var total = context.dataset.data.reduce(function (acc, curr) {
                                            return acc + curr;
                                        });
                                        var percentage = Math.round((value / total) * 100);
                                        return label + ': ' + percentage + '%';
                                    }
                                }
                            },
                            title: {
                                display: true,
                                text: 'Percentage of Votes',
                                position: 'top',
                                font: {
                                    size: 16
                                }
                            }
                        }
                    }

                });

            </script>

            <% } %>

                <div class="container">
                    <div class="row border">
                        <div class="col-sm-12">
                            <h3 class="h3 text-center p-3">Election Voting History</h3>
                        </div>
                    </div>
                    <div class="row border">
                        <div class="col-sm-4">
                            <p class="p text-center">Student Number</p>
                        </div>
                        <div class="col-sm-4">
                            <p class="p text-center">Position</p>
                        </div>
                        <div class="col-sm-4">
                            <p class="p text-center">Voted Candidate/s</p>
                        </div>
                    </div>
                    <% if (voterTurnout> 0){ for (const key in votes){ %>

                        <div class="row border">
                            <div class="col-sm-4 d-flex align-items-center justify-content-center">
                                <p class="p">
                                    <%= key %>
                                </p>

                            </div>
                            <div class="col-sm-4 px-0">
                                <div class="list-group">
                                    <% const value=votes[key]; for (const vote of value){ %>
                                        <div class="list-group-item">
                                            <p class="p text-center">
                                                <%= vote.position %>
                                            </p>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <div class="col-sm-4 px-0">
                                <div class="list-group">
                                    <% for (const vote of value){ for (const candidate of vote.candidates){ %>
                                        <div class="list-group-item">
                                            <p class="p text-center">
                                                <%= candidate %>
                                            </p>
                                        </div>
                                        <% }} %>
                                </div>


                            </div>
                        </div>
                        <% }}else{%>
                            <div class="row border">
                                <div class="col-sm-12 text-center py-3">
                                    <p>No votes yet.</p>
                                </div>
                            </div>
                            <% } %>
                </div>
    </div>
</body>

</html>