<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

</head>

<body>

    <p class="h1 text-center">Voters Database</p>
    <a class="btn btn-primary" href="/admin/dashboard">Back to Dashboard</a>
    <form method="post" action="/admin/registerVoters">
        <div class="container my-5">
            <h2>Voters Registration Form</h2>
            <div class="form-group">
                <%- include('./partials/loginErrors.ejs') %>
                    <label for="voterInfos">Register a voter (new line per voter) in this format:<br><b>Student
                            Number,First Name,Middle Name,Last Name,Program (ex. BSCPE),Email</b></label>
                    <textarea class="form-control" id="voterInfos" name="voterInfos" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Register Voters</button>
        </div>
    </form>
    <p class="h1 text-center m-5">Registered Voters</p>
    <div class="container mb-5">
        <div class="row border">
            <div class="col-sm-1">
                <p class="fw-bold">STUDENT NUMBER</p>
            </div>
            <div class="col-sm-2">
                <p class="fw-bold">FIRST NAME</p>
            </div>
            <div class="col-sm-2">
                <p class="fw-bold">MIDDLE NAME</p>
            </div>
            <div class="col-sm-2">
                <p class="fw-bold">LASTNAME</p>
            </div>
            <div class="col-sm-1">
                <p class="fw-bold">PROGRAM</p>
            </div>
            <div class="col-sm-2">
                <p class="fw-bold">EMAIL</p>
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <% if (registeredVoters.length !==0){ for (let voter of registeredVoters) { %>
            <div class="row border">
                <div class="col-sm-1">
                    <p>
                        <%= voter.studentNumber %>
                    </p>
                </div>
                <div class="col-sm-2">
                    <p>
                        <%= voter.firstName %>
                    </p>
                </div>
                <div class="col-sm-2">
                    <p>
                        <%= voter.middleName %>
                    </p>
                </div>
                <div class="col-sm-2">
                    <p>
                        <%= voter.lastName %>
                    </p>
                </div>
                <div class="col-sm-1">
                    <p>
                        <%= voter.program %>
                    </p>
                </div>
                <div class="col-sm-2">
                    <p>
                        <%= voter.email %>
                    </p>
                </div>
                <div class="col-sm-2 text-center">
                    <a class="btn btn-danger px-3" type="button" data-toggle="modal"
                        data-target="#ModalId<%=voter._id%>">Delete</a>
                </div>


                <div class="modal fade" id="ModalId<%=voter._id%>" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel<%=voter._id%>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-danger" id="exampleModalLabel<%=voter._id%>">WARNING</h5>

                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete <%=voter.firstName %> <%= voter.middleName %> <%= voter.lastName %> from voters database?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                <a class="btn btn-primary" href="/admin/deleteVoter?voterId=<%=voter._id%>&creatorEmail=<%=creatorEmail%>">Yes</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <% }} else { %>
                <div class="row border">
                    <div class="col-sm-12 text-center">
                        <p>No registered voters yet.</p>
                    </div>
                </div>
                <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>