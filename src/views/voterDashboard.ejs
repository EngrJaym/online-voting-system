<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <% function capitalizeFirstLetter(str) {
        return str.charAt(0).toUpperCase() + str.slice(1);
    }; %>

    <nav class="navbar navbar-expand-sm bg-primary border">
        <a class="navbar-brand ms-5 text-white" href="#">DigiVote by URSM</a>
        <div class="d-flex inline align-items-center ms-auto">
            <p class="text-white h5 mx-5">Welcome to Voter's Dashboard, <%= capitalizeFirstLetter(voter.firstName.toLowerCase()) %> <%= capitalizeFirstLetter(voter.lastName.toLowerCase()) %>!</p>
          <a class="btn btn-danger ms-auto me-5" href="/voter/logout">Logout</a>
        </div>
          
      </nav>

    <div class="container mx-auto my-5 ">
        <p class="h2 text-center my-5">INVITED ELECTIONS</p>
        <div class="row bg-primary text-white text-center p-3">
            <div class="col-sm-2">
                <p class="h5">Election Title</p>
            </div>
            <div class="col-sm-3">
                <p class="h5">Start Date</p>
            </div>
            <div class="col-sm-3">
                <p class="h5">End Date</p>
            </div>
            <div class="col-sm-2">
                <p class="h5">Election Status</p>
            </div>
            <div class="col-sm-2">
                <p></p>
            </div>
        </div>
        <%
        if (invitedElections.length > 0){
        const options = { 
            timeZone: 'Asia/Manila',
            hour12: true,
            hour: 'numeric',
            minute: 'numeric',
            day: 'numeric',
            month: 'short',
            year: 'numeric'
         };

         const utcDate = new Date();
        const timezoneOffsetInMinutes = utcDate.getTimezoneOffset();
        const now = new Date(utcDate.getTime() - (timezoneOffsetInMinutes * 60000));
        for (const election of invitedElections){ 

            const ISOStartDate = election.startDate.toISOString().slice(0,16);
          const ISOEndDate = election.endDate.toISOString().slice(0,16);
          const localStartDate = new Date(ISOStartDate).toLocaleString('en-US', options);
          const localEndDate = new Date(ISOEndDate).toLocaleString('en-US', options);

            if (now < election.startDate){ 
                var status = 'UPCOMING';
                var btn = 'Waiting to Start';
                var url =  '#';
              }
              else if (now > election.startDate && now > election.endDate){
                  var status = 'FINISHED';
                  var btn = 'View Final Results';
                  var url = '/voter/viewFinalResults?electionId=' + election._id + '&status=FINISHED';
              }
              else if (now > election.startDate && now < election.endDate){
                  var status = 'ONGOING';
                  var voted = false;
                  for (const votedElection of votedElections){
                    if (votedElection == election._id){
                        var btn = 'View Partial Results';
                        var url = '/voter/viewFinalResults?electionId=' + election._id + '&status=ONGOING';
                        voted = true;
                    }
                  }
                  if (voted === false){
                    var btn = 'Vote Now';
                    var url = '/voter/vote?electionId=' + election._id ;
                  }
                    
              } %>
        <div class="row border my-3 text-center">
            <div class="col-sm-2 py-3" style="background-color: #eeeeee;">
                <%= election.electionTitle %>
            </div>
            <div class="col-sm-3 py-3">
                <%= localStartDate %>
            </div>
            <div class="col-sm-3 py-3" style="background-color: #eeeeee;">
                <%= localEndDate %>
            </div>
            <div class="col-sm-2 py-3">
                <%= status %>
            </div>
            <div class="col-sm-2 my-auto px-0">
                <a class="btn w-100 py-3 <%= status === 'UPCOMING' ? 'btn-warning' : (status === 'FINISHED' ? 'btn-success' : (btn === 'Already Voted' ? 'btn-danger' : 'btn-primary')) %>"
                    href="<%= url %>"><%= btn %></a>
            </div>
            
        </div>
        <% }} else{ %>
            <div class="row border">
                <div class="col-sm-12 text-center py-3">
                    <p>No invited elections yet.</p>
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>